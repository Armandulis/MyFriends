<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageviewlist_picture"
        android:layout_width="103dp"
        android:layout_height="151dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/picture_description"
        android:onClick="openFriendDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textviewlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/name"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/imageviewlist_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textviewlist_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/phone"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageviewlist_picture"
        app:layout_constraintTop_toBottomOf="@+id/textviewlist_name" />

    <TextView
        android:id="@+id/textviewlist_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/birthday"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageviewlist_picture"
        app:layout_constraintTop_toBottomOf="@+id/textviewlist_phone" />
</android.support.constraint.ConstraintLayout>